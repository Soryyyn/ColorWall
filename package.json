{
  "name": "hexwall",
  "version": "1.0.4",
  "description": "generates a wallpaper & sets it everyday",
  "main": "./dist/main/Main.js",
  "types": "./dist/main/Main.d.ts",
  "bin": {
    "hexwall": "./dist/main/Main.js"
  },
  "scripts": {
    "start": "electron .",
    "rebuild": "electron-rebuild -f -w hexwall",
    "watch": "tsc --watch",
    "build-all": "electron-packager . HexWall --platform all --icon ./media/single_icon.ico --prune --out ./builds --overwrite"
  },
  "build": {
    "appId": "com.soryyyn.hexwall",
    "win": {
      "target": "nsis",
      "icon": "media/single_icon.ico"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": "true",
      "oneClick": false,
      "perMachine": true
    },
    "directories": {
      "output": "builds"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Soryyyn/HexWall.git"
  },
  "keywords": [
    "color",
    "wallpaper",
    "hex"
  ],
  "author": "Soryn BÃ¤chli",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Soryyyn/HexWall/issues"
  },
  "homepage": "https://github.com/Soryyyn/HexWall#readme",
  "devDependencies": {
    "@types/color-convert": "^1.9.0",
    "@types/node": "13.7.4",
    "@types/open": "^6.2.1",
    "@types/wallpaper": "^2.5.1",
    "electron": "^8.0.1",
    "electron-packager": "^14.2.1",
    "electron-rebuild": "^1.10.0"
  },
  "dependencies": {
    "canvas": "^2.6.1",
    "color-convert": "^2.0.1",
    "open": "^7.0.2",
    "wallpaper": "^4.4.1"
  }
}
