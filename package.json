{
  "name": "hexwall",
  "version": "1.0.4",
  "description": "generates a wallpaper & sets it everyday",
  "main": "./dist/main/main.js",
  "bin": {
    "hexwall": "./dist/main/main.js"
  },
  "scripts": {
    "start": "npm run compile && electron .",
    "rebuild": "electron-rebuild -f -w hexwall",
    "compile": "tsc && browserify -t electron-renderify ./dist/new_renderer/renderer.js > ./dist/bundle.js",
    "build-win": "electron-builder .",
    "test": "echo does nothing right now"
  },
  "build": {
    "appId": "com.soryyyn.hexwall",
    "remoteBuild": true,
    "extends": null,
    "asar": true,
    "asarUnpack": [
      "media"
    ],
    "files": [
      "./page/**",
      "./dist/**/*",
      "./node_modules/**",
      "./package.json",
      "./media/**",
      "./new_page/**"
    ],
    "directories": {
      "output": "builds",
      "buildResources": "./dist"
    },
    "win": {
      "target": "nsis",
      "icon": "./media/single_icon.ico"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": true,
      "deleteAppDataOnUninstall": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Soryyyn/HexWall.git"
  },
  "keywords": [
    "color",
    "wallpaper",
    "hex"
  ],
  "author": "Soryn BÃ¤chli",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Soryyyn/HexWall/issues"
  },
  "homepage": "https://github.com/Soryyyn/HexWall#readme",
  "devDependencies": {
    "@types/color-convert": "^1.9.0",
    "@types/mithril": "^2.0.2",
    "@types/node": "12.12.6",
    "@types/open": "^6.2.1",
    "@types/wallpaper": "^2.5.1",
    "browserify": "^16.5.0",
    "electron": "^8.1.1",
    "electron-builder": "^22.4.1",
    "electron-rebuild": "^1.10.1",
    "electron-renderify": "0.0.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.12.1",
    "canvas": "^2.6.1",
    "color-convert": "^2.0.1",
    "font-list": "^1.2.6",
    "installfont": "0.0.12",
    "mithril": "^2.0.4",
    "open": "^7.0.3",
    "wallpaper": "^4.4.1"
  }
}
