{
  "name": "hexwall",
  "version": "1.0.4",
  "description": "generates a wallpaper & sets it everyday",
  "main": "./dist/main/Main.js",
  "bin": {
    "hexwall": "./dist/main/Main.js"
  },
  "scripts": {
    "start": "electron .",
    "rebuild": "electron-rebuild -f -w hexwall",
    "watch": "tsc --watch",
    "compile-tsc": "tsc",
    "build-win": "electron-builder .",
    "test": "echo does nothing right now"
  },
  "build": {
    "appId": "com.soryyyn.hexwall",
    "remoteBuild": true,
    "extends": null,
    "files": [
      "./page/**",
      "./dist/**/*",
      "./media/**",
      "./node_modules/**",
      "./package.json"
    ],
    "asar": false,
    "win": {
      "target": "nsis",
      "icon": "./media/single_icon.ico"
    },
    "directories": {
      "output": "builds",
      "buildResources": "./dist"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Soryyyn/HexWall.git"
  },
  "keywords": [
    "color",
    "wallpaper",
    "hex"
  ],
  "author": "Soryn BÃ¤chli",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Soryyyn/HexWall/issues"
  },
  "homepage": "https://github.com/Soryyyn/HexWall#readme",
  "devDependencies": {
    "@types/color-convert": "^1.9.0",
    "@types/node": "14.0.23",
    "@types/open": "^6.2.1",
    "@types/wallpaper": "^2.5.1",
    "electron-builder": "^22.4.1",
    "electron": "^8.2.0",
    "electron-rebuild": "^1.10.1"
  },
  "dependencies": {
    "canvas": "^2.6.1",
    "color-convert": "^2.0.1",
    "open": "^7.0.3",
    "wallpaper": "^4.4.1",
    "@fortawesome/fontawesome-free": "^5.13.0"
  }
}